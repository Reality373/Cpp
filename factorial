#include<iostream>
using namespace std;

int factorial(int n) {
  if(n > 1)
    return n * factorial(n - 1);
  else
    return 1;
}

int main() {

  int n;

  cout << "Enter a positive number : ";
  cin >> n;
  int fact = factorial(n);

  cout << "Factorial of " << n << " = " << fact;

  return 0;
}

